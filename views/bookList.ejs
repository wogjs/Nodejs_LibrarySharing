<!------------------------HEADER :: 공통 ----------------------->
<!DOCTYPE html>
<html style="height: 100%;">
<head>
	<%-include('head/header.ejs')%>
</head>
<body class="fp-bodybg">
	<div class="wrapper">
        <%-include('head/nav.ejs')%>
		<!------------------------HEADER::공통------------------------>

							<!-- javascript:검색어 체크 -->
							<script type="text/javascript">
								function keyword_check() {
									if (document.search.keyword.value == '') {
										alert('검색어를 입력하세요');
										document.search.keyword.focus();
										return false;
									}
								}
							</script>
							<!-- javascript:검색어 체크 -->

		<!------------------------메인------------------------>

		<div class="container">
			<!-- iam-wrapper -->
			<div class="iam-wrapper">
				<main class="iam-main ng-scope">
				<!-- --------세부 검색용 --------- -->
				<form name="search" method="get" action="/book/bookList/" onSubmit="return keyword_check()">
					<!-- 세부 검색용 form태그입니다! 다른 방식으로 구현 시 삭제해주세요! -->
					<div style="text-align: center; background-color:#eee; border: 1px solid #dddddd; padding:10px;margin-bottom: 30px;">
						<select  name="searchWhat" style=" display: inline; width: 100px;" class="form-control">
							<option value="Title">제목</option>
							<option value="Author">저자</option>
							<option value="Publisher">출판사</option>
							<option value="ISBN">ISBN</option>
						</select>
						<input class="form-control" style="display: inline;width: 80%;" name="searchKey" type="text" id="findID" maxlength="20"   placeholder="찾을 책의 검색어를 입력하세요">
						<input class="btn btn-primary" type="submit" value="검색">				
					</div>
				</form>
				<!-- --------세부 검색용 --------- -->
				<!-- ------------검색결과 출력 =========== -->
				<form action= "#" method="post">
				<!-- 카트 담기용 form태그입니다! 다른 방식으로 구현 시 삭제해주세요! -->
					<table class="table table-bordered table-hover" id="searchResult" style="text-align: center; border: 1px solid #dddddd">
						<thead>
							<tr>
								<th colspan="8">
									<h4>검색 결과 LIST</h4>
								</th>
							</tr>
							<tr>
								<th style="background-color: #fafafa; color: #000000; width: 100px;"><h5>ISBN</h5></th>
								<th style="background-color: #fafafa; color: #000000; width: 70px;"><h5>장르</h5></th>
								<th style="background-color: #fafafa; color: #000000;"><h5>책 제목</h5></th>
								<th style="background-color: #fafafa; color: #000000; width: 100px;"><h5>저자</h5></th>
								<th style="background-color: #fafafa; color: #000000; width: 100px;"><h5>옮긴이</h5></th>
								<th style="background-color: #fafafa; color: #000000; width: 100px;"><h5>출판사</h5></th>
								<th style="background-color: #fafafa; color: #000000; width: 110px;"><h5>출간일</h5></th>
						</thead>
						<tbody>

							<!-- 검색결과가 있을 경우 -->
							<% for (var i=0; i< bookrow.length; i++) { %>
								<tr>
									<td><%= bookrow[i].ISBN%></td>
									<td><%= bookrow[i].Genre_Name%></td>
									<td style="text-align: left;">
										<img class="media-object img-circle" style="width: 40px; height: 40px; margin: 0px auto; display: inline;"
											src="../../<%= bookrow[i].Cover%>"> 
										<a href="/book/bookDetail/<%= bookrow[i].ISBN%>"><b><%= bookrow[i].Title%></b></a>
									</td>
									<td><%= bookrow[i].Author%></td>
									<td><%= bookrow[i].Translator%></td>
									<td><%= bookrow[i].Publisher%></td>
									<td><%= bookrow[i].Publication_Date%></td>
								</tr>
							<% } %>
							<!-- 검색결과가 있을 경우 -->
						</tbody>
					</table>
				</form>
				<!--======= 검색결과 ========-->
				</main>
			</div>
		</div>
		<!------------------------메인------------------------->
	</div>
</body>
</html>
