<!------------------------HEADER :: 공통 ----------------------->
<!DOCTYPE html>
<html style="height: 100%;">

<head>
	<%-include('head/header.ejs')%>
</head>

<body class="fp-bodybg">
	<div class="wrapper">
		<%-include('head/nav.ejs')%>
		<!------------------------HEADER::공통------------------------>
		<!------------------------메인------------------------>

		<div class="container">

			<!-- iam-wrapper -->
			<div class="iam-wrapper">
				<main class="iam-main ng-scope wrapper">
					<!--======= 프로필 ========-->
					<div style="display:inline-block; width: 36%; margin-right:3%;vertical-align: top;">
						<div class="myName">
							[ <%= user[0].Name%> ]
						</div>
						<table class="table table-bordered " style="border : 1px solid #dddddd;text-align:center; ">
							<tr>
								<td colspan="2" class="myBadge">
									<span class="label label-info">뱃지 </span>
									<% for (var i=0; i< badge.length; i++) {%>
									<div class="media-object img-circle bkBadge">독서왕</div>
									<% } %>
								</td>
							</tr>
							<% if(user[0].Open_Range == 1) { %>
							<tr style="text-align:left;">
								<td colspan="2">
									내 서재::<b>전체공개 상태</b>
									<button type="button" onclick="location.href='/users/range/close'"
										class="btn btn-primary pull-right">비공개로 바꾸기</button>
								</td>
							</tr>
							<% } else { %>
							<!--- if 서재가 전채공개상태- -->
							<!--- if 서재가 비공개상태- -->
							<tr style="text-align:left;">
								<td colspan="2">
									내 서재::<b>비공개 상태</b>
									<button type="button" onclick="location.href='/users/range/open'"
										class="btn btn-primary pull-right">전체공개로 바꾸기</button>
								</td>
							</tr>
							<% } %>
							<!--- if 서재가 비공개상태- -->
							<tr class="follows">
								<td onclick="location.href='/users/showMemberFollowing'">
									<b>following</b> ::
									<span id="fcount"><%= wers[0].ID%></span>
								</td>
								<td onclick="location.href='/users/showMemberFollower'">
									<b>followers</b> ::
									<span id="fcount"><%= wing[0].Follow_ID %></span>
								</td>
							</tr>
						</table>
						<table class="myInfo">
							<tbody>
								<tr>
									<td>- 아이디 </td>
									<td>: <%= user[0].ID %></td>
								</tr>
								<tr>
									<td>- 거주지 </td>
									<td>: <%= user[0].Address %></td>
								</tr>
								<tr>
									<td> - 소속 클럽 </td>
									<% if(user[0].Club_Name == null) { %>
									<td>: 가입된 클럽이 없습니다.</td>
									<% } else { %>
									<td>: <%= user[0].Club_Name %></td>
									<% } %>
								</tr>
								<tr>
									<td>- 이름 </td>
									<td>: <%= user[0].Name %></td>
								</tr>
								<tr>
									<td>- 전화번호 </td>
									<td>: <%= user[0].Phone_Num %></td>
								</tr>
								<tr>
									<td>- 생년월일</td>
									<td>: <%= user[0].Birthday %></td>
								</tr>
								<tr>
									<td>- 이메일 </td>
									<td>: <%= user[0].Email %></td>
								</tr>
								<tr>
									<td>- 가입날짜</td>
									<td>: <%= user[0].Signup_date %></td>
								</tr>
							</tbody>
						</table>
						<div style="margin-top:10px;">
							<a href="/users/update" class="btn btn-primary pull-right  btnRed"
								style="width:45%;margin-right:20px;">회원정보 수정하기</a>
							<a href="/users/showMemberRecommend" class="btn btn-primary pull-right  btnBlue"
								style="width:45%;">서재 추천받기</a>
						</div>
					</div>
					<!--======= 프로필 ========-->
					<!--======= 통계 =======-->
					<div style="display:inline-block; width: 60%; vertical-align: top;">

						<table class="table table-bordered " style=" border : 1px solid #dddddd; ">
							<thead>
								<tr>
									<th colspan="2">
										<h4>2019년의 월별 독서량 리스트</h4>
									</th>
									
								</tr>
							</thead>
							<tbody>
								<% for(var i = 0; i < amount.length; i++) { %>
								<tr>
									<td style="width:200px;">
										<h5><%= amount[i].Genre_Name %></h5>
									</td>
									<td style="margin-top: 10px;">
										<p><%= amount[i].Reading_Book_Amount %>권</p>
									</td>
								</tr>
								<% } %>
							</tbody>
						</table>
						<form method="get" action="/users/amount/" onSubmit="return keyworkd_check()">
							<th colspan="2" style="background-color: #ffffff;">
								<div style="text-align: right;">
								<select name="searchWhat" style=" display: inline; width: 100px;"
										class="form-control">
										<% for(var i = 0; i < Mon.length; i++) { %>
											<option value="<%= Mon[i].Month%>"><%= Mon[i].Month%></option>
										<% } %>
									</select>
									<input class="btn btn-primary" type="submit" value="검색">
								</div>
								</th>
							</form>
					</div>
					<!--======= 통계 =======-->
				</main>
			</div>
		</div>
		<!------------------------메인------------------------->
	</div>
</body>

</html>